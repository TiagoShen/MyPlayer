<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiayuxi.myplayer.MusicList">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/lovemusic"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_menu_myplaces" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musiclist"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lovemusic"
        android:paddingTop="20dp" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:iconifiedByDefault="true"
        android:inputType="textCapWords"
        android:imeOptions="actionSearch"
        android:queryHint="请输入关键字"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/renew"
        android:layout_alignBottom="@+id/lovemusic"
        android:layout_toLeftOf="@+id/lovemusic"
        android:layout_toStartOf="@+id/lovemusic"
        android:background="@android:drawable/ic_menu_rotate" />

</RelativeLayout>
